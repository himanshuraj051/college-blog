<%- include('../partials/header'); -%>
    <style>
        .circle {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-color: blue;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 10px;
        }
    </style>

    <body style="background-color: #cacaca; box-sizing: border-box;">
        <div class="row d-flex align-items-center px-4" style="background-color: #ffffff; box-shadow: 0px 1px 4px rgb(0,0,0,0.16); height: 50px; top: 0px; position: sticky; z-index: 1;">
            <div class="col-4">
                <h5>College Engagement</h5>
            </div>
            <div class="d-flex" style="margin-left: auto;">
                <div class="px-2">Blogs</div>
                <div class="px-2">Notice</div>
                <div class="px-2">Interview Experience</div>
                <div class="px-2">
                    <p id="profile">Profile</p>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row justify-content-center m-3">
                <div class="col-6">
                    <div class="card mb-2">
                        <div class="card-body">
                            <div class="d-flex">
                                <div class="circle">
                                    <div style="text-align: center;">EB</div>
                                </div>
                                <div>
                                    <div style="font-size: medium; font-weight: bold;">Briggs, Elaine</div>
                                    <div>computer science</div>
                                </div>
                                <div style="margin-left: auto;">
                                    <a href="/blog/<%= blog._id %>/edit" id="edit">Edit</a>
                                </div>
                            </div>

                            <hr>

                            <div style="word-wrap: break-word!important;
                            word-break: break-word!important;" class="mt-3">
                                <%= blog.body %>
                            </div>
                            <hr>

                            <div class="row h-100">
                                <div class="col" style="text-align: center; border-right: 1px solid grey;">UPVOTE</div>
                                <div class="col" style="text-align: center;">DOWNVOTE</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            let info = JSON.parse(localStorage.getItem('info'));
            let anchorTag = document.getElementById('edit');

            let token;
            if (!info) token = 'TOKEN_NOT_FOUND';
            else token = info.token, document.getElementById('profile').innerHTML = info.username;

            anchorTag.href = "/blog/<%= blog._id %>/edit/" + token;
        </script>

    </body>

    </html>